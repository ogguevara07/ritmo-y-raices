// FooterCompra.astro
---

<footer class="bg-[#0d1b2a] py-8 px-4">
    <div class="max-w-6xl mx-auto">

        <!-- Título -->
        <h3 class="text-white text-2xl font-bold mb-6">
            Información Importante
        </h3>

        <!-- Grid de 3 columnas -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">

            <!-- Horarios -->
            <div>
                <h4 class="text-orange-500 font-semibold mb-2">Horarios</h4>
                <p class="text-gray-300 text-sm">
                    Lunes a Sábados de 10:00 AM - 5:00 PM
                </p>
            </div>

            <!-- Política de Grupos -->
            <div>
                <h4 class="text-purple-400 font-semibold mb-2">Política de Grupos</h4>
                <p class="text-gray-300 text-sm">
                    Grupos escolares requieren reservación previa con mínimo 3 días de anticipación
                </p>
            </div>

            <!-- Beneficios -->
            <div>
                <h4 class="text-orange-500 font-semibold mb-2">Beneficios</h4>
                <p class="text-gray-300 text-sm">
                    Los boletos incluyen acceso a todas las exhibiciones permanentes
                </p>
            </div>
        </div>

        <!-- Línea divisoria -->
        <div class="border-t border-gray-700 pt-6">
            <p class="text-gray-400 text-sm text-center">
                © 2025 Centro Cultural Raíces y Ritmo. Todos los derechos reservados.
            </p>
        </div>
    </div>
</footer>